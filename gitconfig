        email = ykoketani@gmail.com

[init]
        defaultBranch = main

[color]
        ui = true

[core]
        editor = nvim
        excludesfile = ~/.gitignore
        sshCommand = "ssh -i ~/.ssh/gh_yysushi -F /dev/null"
        hooksPath = .husky

[diff]
        tool = vimdiff

[merge]
        tool = vimdiff

[pull]
        ff = only

[mergetool]
        keepBackup = false

[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[tig "bind"]
        generic = <Ctrl-f> scroll-page-down
        generic = <Ctrl-b> scroll-page-up

[ghq]
        root = ~/git
